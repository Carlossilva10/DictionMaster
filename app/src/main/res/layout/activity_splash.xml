<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Splash">

        <TextView
            android:id="@+id/textView"
            android:layout_width="112dp"
            android:layout_height="25dp"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="41dp"
            android:textSize="22sp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#052D39"
            android:textAlignment="center"
            android:text="@string/nome_dev"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="712dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="78dp"
            android:layout_height="78dp"
            app:srcCompat="@drawable/icon"
            android:contentDescription="@string/imagem_livro"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="292dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="188.43dp"
            android:layout_height="32dp"
            android:layout_marginStart="116.78dp"
            android:layout_marginEnd="106.78dp"
            android:layout_marginTop="22dp"
            android:contentDescription="@string/imagem_titulo"
            tools:layout_editor_absoluteX="116.78dp"
            tools:layout_editor_absoluteY="392dp"
            app:srcCompat="@drawable/title"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>